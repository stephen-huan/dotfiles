# maintain state while updating icon
$YABAI_SCRIPTS/toggle

# auto-update from https://git.io/update-yabai
YABAI_CERT=yabai-cert sh -c "$YABAI_SCRIPTS/yabai_update" &

echo "yabai configuration loaded.."
