### mouse
button4 : cmd + shift -  open_bracket     # switch tabs in Chrome
button5 : cmd + shift - close_bracket
button6 : cmd - mission_control           # show desktop
button9 : cmd - tab                       # switch to recent application

### miscellaneous
# hyper when held, escape when tapped
any - caps_lock    : cmd + alt + ctrl - left_shift : escape 
alt - c            : escape, c            # change for iterm2 shortcut
hyper - hyphen     : cmd + alt - eject    # sleep
hyper - equal_sign : ctrl + shift - eject # sleep display
cmd - m            : vk_none              # disable minimize
cmd - h            : vk_none              # disable hide

### yabai
# keycodes can be found at /Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks/Carbon.framework/Versions/A/Frameworks/HIToolbox.framework/Versions/A/Headers/Events.h
hyper - 1             : f13               # 0x69
hyper - 2             : f14               # 0x6B
hyper - 3             : f15               # 0x71
hyper - 4             : f16               # 0x6A
hyper - 5             : f17               # 0x40
hyper - 6             : f18               # 0x4F
hyper - 7             : f19               # 0x50
hyper - 8             : f20               # 0x5A
hyper - 9             : keypad_0          # 0x52, skhd can't detect above 20

hyper - n             : keypad_1          # 0x53
hyper - a             : keypad_2          # 0x54
hyper - s             : keypad_3          # 0x55
hyper - w             : keypad_4          # 0x56
hyper - d             : keypad_5          # 0x57
hyper - z             : keypad_6          # 0x58
hyper - open_bracket  : keypad_7          # 0x59
hyper - close_bracket : keypad_8          # 0x5B
hyper - f             : keypad_9          # 0x5C
hyper - comma         : keypad_comma      # 0x41
hyper - period        : keypad_period     # 0x5F, disable sysdiagnose
hyper - up_arrow      : keypad_asterisk   # 0x43
hyper - e             : keypad_plus       # 0x45
# hyper - X             : keypad_num_lock   # 0x47, skhd can't detect num lock
hyper - left_arrow    : keypad_slash      # 0x4B
hyper - down_arrow    : keypad_enter      # 0x4C
hyper - right_arrow   : keypad_hyphen     # 0x4E
hyper - q             : keypad_equal_sign # 0x51

# TODO: PC keys (help, menu, etc.)

hyper - b             : international1    # 0x5E
hyper - o             : international3    # 0x5D
# hyper - X             : japanese_eisu     # 0x66
# hyper - X             : japanese_kana     # 0x68

