set from      = "shuan@gatech.edu"
set sendmail  = "$my_sendmail_program -a gatech"
set mbox      = "+gatech/archive"
# set record    = "+gatech/sent"
unset record  # prevent duplication
set postponed = "+gatech/drafts"
# unlike gmail, inbox messages aren't automatically saved to archive
macro index,pager I "<save-message>+gatech/archive<enter>"
set trash     = "+gatech/trash"

