set from      = "shuan@berkeley.edu"
# can't send email from berkeley 
set sendmail  = ""
set mbox      = "+berkeley/archive"
# set record    = "+berkeley/sent"
unset record  # prevent duplication
set postponed = "+berkeley/drafts"
# remove from inbox (since a copy is stored in all mail)
bind index,pager I purge-message
set trash     = "+berkeley/trash"

